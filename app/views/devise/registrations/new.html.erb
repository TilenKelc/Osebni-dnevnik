<div id="logreg-forms">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-signup") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h1 class="h3 mb-3 font-weight-normal" style="text-align: center"> Sign in</h1>
    <!--<input type="text" id="user-name" class="form-control" placeholder="Full name" required="" autofocus="">-->
    <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "user-email", class: "form-control", placeholder: "Email address", required: true %><br>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", id: "user-pass", class: "form-control", placeholder: "Password", required: true, autofocus: true %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "user-repeatpass", class: "form-control", placeholder: "Repeat Password", required: true, autofocus: true %><br>
    <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
  <% end %>
  <br>
</div>
