<script>
  if (window.location.hash === "#_=_"){
    history.replaceState 
      ? history.replaceState(null, null, window.location.href.split("#")[0])
      : window.location.hash = "";
  }
    
  setTimeout(fade_out, 2000);

  function fade_out() {
    $(".alert").fadeOut().empty();
  }
</script>

<% if user_signed_in? %>
  <div class="container extra">
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
      <%= link_to "Dnevnik", posts_path, class: "navbar-brand text-primary" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to "Domov", posts_path, class: "nav-link text-primary" %>
          </li>
          <li class="nav-item">
            <%= link_to "Dodaj", new_post_path, class: "nav-link text-primary" %>
          </li>
          <li class="nav-item">
            <%= link_to "Profile", posts_path, class: "nav-link text-primary" %>
          </li>
          <li class="nav-item">
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link text-primary" %>
          </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </nav>

    <div class="container">
      <h1>Posts</h1>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th>Date</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.body %></td>
              <td><%= post.date %></td>
              <td><%= link_to "Show", post %></td>
              <td><%= link_to "Edit", edit_post_path(post) %></td>
              <td><%= link_to "Destroy", post, method: :delete, data: { confirm: "Are you sure?" } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>
  </div>

<% else %>
  <div class="container d-flex h-100">
      <div class="row align-self-center w-100">
          <div class="col-6 mx-auto">
              <div class="alert alert-primary text-center custom">
                  <p class="lead">Warning, you are not loged in. To procede, please login.</p>
                  <%= link_to "Login / Register", new_user_session_path, class: "align-self-center text-center btn btn-primary" %>
              </div>
          </div>
      </div>
  </div>
<% end %>